
.avatar-box{
	flex: 1 1 30%;
  }
.top {
	display: flex;
	flex-direction: column;
	text-align: center;
	height: 120px;
}
.avatar{
  width: 80px;
  height: 80px

}
.word{
  font-size: 13px;
  color: #939393;
}


.order-bar{
  width:100%;
  height:100%;
  display: flex;
}

.order-bar .item{
  display: flex;
  flex-direction: column;
  width:187rpx;
  text-align: center;
  font-size: 13px;
  line-height: 20px;
  justify-content: center;
  align-items: center;
  margin-bottom: 15px;
  margin-top: 15px;
  color:#333;
}

.order-bar .item .icon {

  opacity:0.4;
  width: 67rpx;
  height: 67rpx;
  align-content: center;
}


.green-btn{
  width: 80%;
  background-color: red;
  color:white;
  border-radius: 98rpx;
  flex-direction: row;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:25px;
}
.size{
  font-size: 5px
}

.container {
  background-color: #F2f2f2;
}
.userinfo {
  display: flex;
  flex-direction: column;
  padding: 50rpx 0;
  align-items: center;
  background: #f9f027;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #333;
}
.weui_cell{
    position: relative;
    display: flex;
    padding: 15px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #F4F4F4;
}
.weui_cell_hd{
  display: inline-block;
  width: 20px;
  margin-right: 5px;
}
.weui_cell_hd image{
  
  width: 100%;
  height: 20px;
  vertical-align: -2px;  
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 14px;
  color: #939393;
}
.badge{
  position: absolute;
  top: 18px;
  right: 40px;
  width: 15px;
  height: 15px;
  line-height: 15px;
  background: #ff0000;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  font-size: 8px;
}
.with_arrow{

  opacity:0.4;
  position: absolute;
  top: 18px;
  right: 15px;
  width: 15px;
  height: 15px;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}


.botom-area{
  width: 100%;
  height: 170px;
  background-color: #F4F4F4;
}



